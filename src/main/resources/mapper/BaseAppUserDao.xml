<!-- 登录-->
    <select id="login"  resultType="com.rent.entity.BaseAppUser">
        select *
        from base_app_user
        where 1=1
        <if test="username !=null and username !=''">
            AND user_name = #{username}
        </if>
        <if test="password !=null and password !=''">
            AND user_password = #{password}
        </if>
        <if test="power !=null">
            AND power = #{power}
        </if>
        and status=1
  </select>


</mapper>